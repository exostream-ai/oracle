{
  "name": "exostream",
  "version": "1.0.0",
  "description": "The pricing oracle for LLM inference",
  "type": "module",
  "main": "dist/api/index.js",
  "scripts": {
    "dev": "tsx watch src/api/index.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/api/index.js",
    "scrape": "tsx src/scrapers/index.ts",
    "recompute": "tsx src/engine/index.ts",
    "migrate": "tsx src/db/migrate.ts",
    "seed": "tsx src/db/seed.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "mcp": "tsx src/mcp/index.ts"
  },
  "dependencies": {
    "@hono/node-server": "^1.11.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "cheerio": "^1.0.0-rc.12",
    "dotenv": "^16.4.5",
    "hono": "^4.4.0",
    "postgres": "^3.4.4"
  },
  "devDependencies": {
    "@types/node": "^20.12.0",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.10.0",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
